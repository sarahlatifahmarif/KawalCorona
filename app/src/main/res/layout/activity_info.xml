<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".InfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wabah saat ini"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sumatera Barat"
                android:textColor="@color/black"
                android:textSize="22sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="10dp"
                android:paddingLeft="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/undraw_healthy_habit"
                    />
                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetap Olahraga"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jaga keseimbangan tubuh dengan melakukan olahraga di rumah."
                    android:textColor="@color/black"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.hookedonplay.decoviewlib.DecoView
                        xmlns:custom="http://schemas.android.com/apk/res-auto"
                        custom:dv_lineWidth="26dp"
                        android:id="@+id/char_background"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        />
                    <com.hookedonplay.decoviewlib.DecoView
                        xmlns:custom="http://schemas.android.com/apk/res-auto"
                        custom:dv_lineWidth="26dp"
                        android:id="@+id/char_value"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        />
                    <TextView
                        android:id="@+id/txt_persen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0%"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/btn_total"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/affective_backgroud">
                        <TextView
                            android:id="@+id/label_odp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Total Pantauan"
                            android:textColor="@color/yellow"/>
                        <TextView
                            android:id="@+id/txt_odp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180"
                            android:layout_below="@id/label_odp"
                            android:textColor="@color/yellow"
                            android:textStyle="bold"/>
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/graph_odp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_toRightOf="@id/txt_odp"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btn_pulang"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/positive_background">
                        <TextView
                            android:id="@+id/label_positif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pulang dan Sehat"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/green"/>
                        <TextView
                            android:id="@+id/txt_posotif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="180"
                            android:layout_below="@id/label_positif"
                            android:textColor="@color/green"
                            android:textStyle="bold"/>
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/graph_positif"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_toRightOf="@id/txt_posotif"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <RelativeLayout
                    android:id="@+id/tab_positif"
                    android:background="@drawable/backgroud_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Positif"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab_sehat"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_centerInParent="true"
                    android:paddingVertical="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telah Sehat"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tab_meninggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meninggal"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_marginVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kota"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_kota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </HorizontalScrollView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid-19 Terakhir Diupdate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_info_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terakhir update 25 Mar, 15:00 WIB"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_positif"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/semi_red"
                    app:cardElevation="0dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_disable">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_add_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_positif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Positif"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_sehat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/colorAccentTrans"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_enable">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_favorite_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_recovery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telah Sehat"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_meniggal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/semi_red"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_disable">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_close_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_death"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meninggal"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>