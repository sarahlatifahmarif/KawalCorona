<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".InfoKotaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wabah saat ini"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"/>
            <Spinner
                android:id="@+id/spn_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Juni"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="10dp"
                android:paddingLeft="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/undraw_healthy_habit"
                    />
                <TextView
                    android:id="@+id/title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetap Olahraga"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jaga keseimbangan tubuh dengan melakukan olahraga di rumah."
                    android:textColor="@color/black"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid-19 Terakhir Diupdate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/txt_info_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terakhir update 25 Mar, 15:00 WIB"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_positif"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/semi_red"
                    app:cardElevation="0dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_disable">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_add_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_positif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Positif"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_sehat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/colorAccentTrans"
                    app:cardElevation="0dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_enable">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_favorite_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_recovery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telah Sehat"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_meniggal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    app:cardBackgroundColor="@color/semi_red"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/icon_backgroud_disable">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_close_black_24dp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/txt_latest_death"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginTop="24dp"
                            android:textColor="@color/colorAccent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meninggal"
                            android:textAlignment="center"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dalam Pengawasan"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/item_graph"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>